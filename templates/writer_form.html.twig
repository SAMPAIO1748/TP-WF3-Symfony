{% extends "block.html.twig" %}

{% block link %}

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

{% endblock %}

{% block main %}


	<div class="container-fluid1">
        <div class="row1">

			<h1>Vous pouvez rajouter ou modifier un auteur</h1>


    		{{form_start(writerForm)}}

			<div class="d-flex flex-column justify-content-around">

				<div class="d-flex flex-column justify-content-center">
					{{form_label(writerForm.name, 'Nom de l\'auteur :', {'label_attr' : {'class' : 'label'} } ) }}
					{{form_widget(writerForm.name, {'attr' : {'class' : 'input', 'placeholder' : 'Nom de l\'auteur'} } ) }}
				</div>

				<div class="d-flex flex-column justify-content-center">
					{{form_label(writerForm.bio, 'Biographie de l\' auteur :', {'label_attr' : {'class' : 'label'} } ) }}
					{{form_widget(writerForm.bio, {'attr' : {'class' : 'input', 'placeholder' : 'Biographie de l\'auteur'} } ) }}
				</div>

				<div>
					{{form_widget(writerForm.Enregistrer, {'attr' : {'class' : 'btn btn-primary mb-3'} } ) }}
				</div>
				
			</div>

			{{form_end(writerForm)}}

		</div>
	</div>


{% endblock %}

{% block footer %}

	<p>
        Merci d'ajouter ou modifier des auteurs.
    </p>

<style>
	body{
		background-color: darkcyan;
	}
</style>

{% endblock %}